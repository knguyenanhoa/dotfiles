# >>>>>> MISC
# misc scripts

# postgres when it doesn't autostart
alias pgstart='pg_ctl -D /usr/local/var/postgresql\@9.5/ start'
alias pgrestart='pg_ctl -D /usr/local/var/postgresql\@9.5/ restart'

# scaffold latex doc in current dir
function mklatex {
    info "scaffolding latex directory at $PWD"
    mkdir $1
    mkdir $1/images/
    cp $HOME/id/repos/w-latex/sample-tex-dir/sample-tex-file.tex $1/$1.tex
    info 'done'
}
