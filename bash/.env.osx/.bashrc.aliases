# >>>>>> GENERAL
# general aliases

alias la='ls -lhaFGS'
alias tag='ctags -R .'
alias p3='python3'
alias lisp='sbcl'
alias rs='Rscript'

# tmux
alias tml="tmux ls"
function tma { tmux attach-session -t $1; }
function tmn { tmux new -s $1; }
function tmk { tmux kill-session -t $1; }

# git
alias gs='git status'
__git_complete gs _git_status
alias gl='tig --all'
__git_complete gl _git_log
alias gad='git add'
alias gbr='git branch'
__git_complete gbr _git_branch
alias gcm='git commit'
alias gck='git checkout'
__git_complete gck _git_checkout
##### reduces clashes and merges
alias gpl='git add .; git stash; git pull;'
alias gps='git push'
alias gst='git stash'
__git_complete gst _git_stash
alias gmr='git merge'
__git_complete gmr _git_merge
alias gdf='git difftool'
__git_complete gdf _git_difftool
alias grs='git reset'
alias pop='git stash pop'


# >>>>>> NAV
# nav aliases should prefix with gg → less likely to clash with git aliases
# nav aliases that directly open files should start with oo → less likely to clash
# scaffolding aliases should start with mk (it is making something)

# other
